.app {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--color-bluegrey-25);
}

.main-content {
  flex: 1;
  padding: var(--spacing-xl);
  max-width: var(--max-width);
  width: 100%;
  margin: 0 auto;
}

@media (max-width: 768px) {
  .main-content {
    padding: var(--spacing-md);
  }
}
